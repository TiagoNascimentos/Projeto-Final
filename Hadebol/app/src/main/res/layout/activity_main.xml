<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.petossauro.android.hadebol.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/hand"
        />
    <TextView
        android:id="@+id/titulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:text="Conheça o Handebol"
        />
    <Button
        android:layout_below="@+id/titulo"
        android:layout_marginTop="50sp"
        android:layout_centerInParent="true"
        android:id="@+id/historia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="História"
        android:onClick="historia"/>
    <Button
        android:layout_below="@+id/historia"
        android:layout_marginTop="30sp"
        android:layout_centerInParent="true"
        android:id="@+id/regras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regras"
        android:onClick="regras"/>
    <Button
        android:layout_below="@+id/regras"
        android:layout_marginTop="30sp"
        android:layout_centerInParent="true"
        android:id="@+id/melhores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Os Melhores"
        android:onClick="notaveis"/>/>
    <Button
        android:layout_below="@+id/melhores"
        android:layout_marginTop="30sp"
        android:layout_centerInParent="true"
        android:id="@+id/campeoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Os Campeões"
        android:onClick="melhores"/>

</RelativeLayout>
